<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971_Tracker.addTerm">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="5" CornerRadius="0">
                <Label Text="ADD TERM" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Label Text="Term Name"/>
                <Entry x:Name="addTermNameEntry" 
                    Placeholder="Name your term here..."/>
            <Label Text="Start Date"/>
                <DatePicker 
                    x:Name="termStartDate"/>
            <Label Text="End Date"/>
                <DatePicker 
                    x:Name="termEndDate"/>            
            
            <Button Text="SAVE"
                x:Name="addTermSaveBTN"
                Clicked="addTermSaveBTN_Clicked"
                FontSize="12" Margin="50,0,50,0"  />
            <Button Text="CANCEL"
                x:Name="addTermCancelBTN"
                Clicked="addTermCancelBTN_Clicked"
                FontSize="12" Margin="50,0,50,0"  />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>